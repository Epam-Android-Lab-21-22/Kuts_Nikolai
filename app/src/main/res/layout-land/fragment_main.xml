<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main_screen.MainFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/messageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/messageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minWidth="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messageTextView" />

    <Button
        android:id="@+id/sharedPreferencesSavingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintEnd_toStartOf="@id/sharedPreferencesLoadingButton"
        app:layout_constraintStart_toStartOf="@+id/sharedPreferencePointerTextView"
        app:layout_constraintTop_toBottomOf="@+id/sharedPreferencePointerTextView" />

    <Button
        android:id="@+id/internalStorageSavingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintEnd_toStartOf="@id/internalStorageLoadingButton"
        app:layout_constraintStart_toStartOf="@+id/internalStoragePointerTextView"
        app:layout_constraintTop_toBottomOf="@+id/internalStoragePointerTextView" />


    <Button
        android:id="@+id/externalStorageSavingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintEnd_toStartOf="@id/externalStorageLoadingButton"
        app:layout_constraintStart_toStartOf="@+id/externalStoragePointerTextView"
        app:layout_constraintTop_toTopOf="@id/externalStorageLoadingButton" />

    <Button
        android:id="@+id/databaseSavingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintEnd_toStartOf="@+id/databaseLoadingButton"
        app:layout_constraintStart_toStartOf="@+id/databasePointerTextView"
        app:layout_constraintTop_toBottomOf="@+id/databasePointerTextView" />

    <Button
        android:id="@+id/sharedPreferencesLoadingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load"
        app:layout_constraintEnd_toEndOf="@+id/sharedPreferencePointerTextView"
        app:layout_constraintStart_toEndOf="@+id/sharedPreferencesSavingButton"
        app:layout_constraintTop_toTopOf="@+id/sharedPreferencesSavingButton" />

    <Button
        android:id="@+id/internalStorageLoadingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load"
        app:layout_constraintEnd_toEndOf="@+id/internalStoragePointerTextView"
        app:layout_constraintStart_toEndOf="@+id/internalStorageSavingButton"
        app:layout_constraintTop_toTopOf="@+id/internalStorageSavingButton" />

    <Button
        android:id="@+id/externalStorageLoadingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load"
        app:layout_constraintStart_toEndOf="@id/externalStorageSavingButton"
        app:layout_constraintEnd_toEndOf="@+id/externalStoragePointerTextView"
        app:layout_constraintTop_toBottomOf="@+id/externalStoragePointerTextView" />

    <Button
        android:id="@+id/databaseLoadingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load"
        app:layout_constraintStart_toEndOf="@id/databaseSavingButton"
        app:layout_constraintEnd_toEndOf="@+id/databasePointerTextView"
        app:layout_constraintTop_toBottomOf="@+id/databasePointerTextView" />

    <TextView
        android:id="@+id/sharedPreferencePointerTextView"
        style="@style/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shared_preferences"
        app:layout_constraintEnd_toStartOf="@+id/externalStoragePointerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageEditText"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/internalStoragePointerTextView"
        style="@style/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/internal_storage"
        app:layout_constraintEnd_toEndOf="@+id/sharedPreferencePointerTextView"
        app:layout_constraintStart_toStartOf="@+id/sharedPreferencePointerTextView"
        app:layout_constraintTop_toBottomOf="@+id/sharedPreferencesSavingButton" />

    <TextView
        android:id="@+id/externalStoragePointerTextView"
        style="@style/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/external_storage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sharedPreferencePointerTextView"
        app:layout_constraintTop_toBottomOf="@+id/messageEditText" />

    <TextView
        android:id="@+id/databasePointerTextView"
        style="@style/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/database"
        app:layout_constraintEnd_toEndOf="@+id/externalStoragePointerTextView"
        app:layout_constraintStart_toStartOf="@+id/externalStoragePointerTextView"
        app:layout_constraintTop_toBottomOf="@+id/externalStorageSavingButton" />


</androidx.constraintlayout.widget.ConstraintLayout>